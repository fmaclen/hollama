{
	"name": "hollama",
	"version": "0.0.0-dev",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test --trace on",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"electron": "electron .",
		"electron:build": "cross-env ADAPTER=electron-node vite build && electron-builder"
	},
	"devDependencies": {
		"@playwright/test": "^1.43.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
		"@types/eslint": "^8.56.0",
		"@types/markdown-it": "^14.0.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.16",
		"codemirror": "^6.0.1",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"date-fns": "^3.6.0",
		"dotenv": "^16.4.5",
		"electron": "^31.3.1",
		"electron-builder": "^24.13.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"express": "^4.19.2",
		"highlight.js": "^11.9.0",
		"lucide-svelte": "^0.372.0",
		"markdown-it": "^14.1.0",
		"ollama": "^0.5.6",
		"postcss": "^8.4.32",
		"postcss-import": "^16.1.0",
		"postcss-load-config": "^5.0.2",
		"postcss-nested": "^6.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.6",
		"thememirror": "^2.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	},
	"optionalDependencies": {
		"@sveltejs/adapter-cloudflare": "^4.2.1"
	},
	"type": "module",
	"main": "./electron/main.js",
	"build": {
		"appId": "com.hollama.app",
		"productName": "Hollama",
		"files": [
			"build/**/*",
			"electron/**/*"
		],
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": "dmg",
			"icon": "electron/resources/icons/mac/icon.icns"
		},
		"win": {
			"target": "nsis",
			"icon": "electron/resources/icons/win/icon.ico"
		},
		"linux": {
			"target": ["deb", "tar.gz"],
			"icon": "electron/resources/icons/png/1024x1024.png"
		}
	}
}
