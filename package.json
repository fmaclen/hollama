{
	"name": "hollama",
	"version": "0.32.1",
	"private": true,
	"homepage": "https://hollama.fernando.is",
	"description": "A minimal LLM chat app that runs entirely in your browser",
	"scripts": {
		"dev": "concurrently \"typesafe-i18n\" \"vite dev --host\"",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"test": "playwright test --trace on --ignore-snapshots ",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"electron": "electron .",
		"electron:build": "cross-env PUBLIC_ADAPTER=electron-node vite build && electron-builder",
		"typesafe-i18n": "typesafe-i18n"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"@playwright/test": "^1.50.0",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.3",
		"@semantic-release/npm": "^11.0.2",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-cloudflare": "^6.0.1",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
		"@types/markdown-it": "^14.0.0",
		"@types/semver": "^7.7.0",
		"autoprefixer": "^10.4.16",
		"bits-ui": "^0.22.0",
		"codemirror": "^6.0.1",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"date-fns": "^3.6.0",
		"dotenv": "^16.4.5",
		"electron": "^31.3.1",
		"electron-builder": "^25.0.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"highlight.js": "^11.9.0",
		"katex": "^0.16.21",
		"lucide-svelte": "^0.372.0",
		"markdown-it": "^14.1.0",
		"markdown-it-texmath": "^1.0.0",
		"ollama": "^0.5.9",
		"openai": "^4.66.1",
		"postcss": "^8.4.32",
		"postcss-import": "^16.1.0",
		"postcss-load-config": "^5.0.2",
		"postcss-nested": "^6.2.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"semantic-release": "^23.0.0",
		"semver": "^7.6.3",
		"svelte": "^5.19.3",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^0.3.27",
		"tailwind-scrollbar": "^3.1.0",
		"tailwindcss": "^3.3.6",
		"thememirror": "^2.0.1",
		"tslib": "^2.4.1",
		"typesafe-i18n": "^5.26.2",
		"typescript": "^5.5.0",
